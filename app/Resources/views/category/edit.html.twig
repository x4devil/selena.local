{% extends '::adminbase.html.twig' %}

{% block title %}
    Редактирование категории
{% endblock %}
{% block body -%}
    <div class="panel panel-default">
        <div class="panel-heading panel-header">
            <h3 class="panel-title">Редактирование категории</h3>
        </div>
        <div class="panel-body">
            {{ form_start(edit_form)}}
            <div class="input-group">
                <span class="input-group-addon" id="name-group">Название</span>
                {{ form_widget(edit_form.name, { 'attr': {'class': 'form-control', 'aria-describedby' : 'name-group', 'placeholder': 'Название'} }) }}
            </div>
            <div class="panel-actions">
                <input class="btn btn-default" type="submit" value="Сохранить" />
                <a class="btn btn-default" href="{{ path('category_index') }}">Назад</a>
            </div>
            {{ form_end(edit_form)}}

            {{ form_start(delete_form) }}
            <input class="btn btn-danger" type="submit" value="Удалить" onclick="return confirm('Вы уверены?')">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}